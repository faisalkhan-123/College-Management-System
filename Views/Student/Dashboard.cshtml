<div class="row">
    @foreach (System.Data.DataRow row in Model.Rows)
    {
        <div class="col-sm-8">
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="/Student/Updates?STUDENTID=@row["STUDENTID"]" class="text-decoration-none pb-4">
                        <i class="fa-solid fa-user fs-3 text-black"></i><br /><br />
                        <h5 class="text-black">Upload Your Profile</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none">
                        <i class="fas fa-file-alt fs-3 text-black"></i><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <h5 class="text-black">Today Task</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none">
                        <i class="fas fa-user-shield  fs-3 text-black"></i><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <h5 class="text-black">Attendence</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none">
                        <i class="fas fa-check-circle fs-3 text-black"></i><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <h5 class="text-black">Test Result</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="/Student/ChangePassword?studentId=@row["studentId"]" class="text-decoration-none pb-4">
                        <i class="fa-solid fa-lock fs-3 text-black"></i><br /><br />
                        <h5 class="text-black">Change Password</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none pb-4">
                        <i class="fa-solid fa-book-open fs-3 text-black"></i><br /><br />
                        <h5 class="text-black">Exam Prepation</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none pb-4">
                        <i class="fa-solid fa-clipboard-question fs-3 text-black"></i><br /><br />
                        <h5 class="text-black">Online Test</h5>
                    </a>
                </div>
            </div>
            <div class="box shadow-sm">
                <div class="underSt">
                    <a href="#" class="text-decoration-none pb-4">
                        <i class="fa fa-question-circle fs-3 text-black"></i><br /><br />
                        <h5 class="text-black">Help</h5>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="profile shadow-sm">
                <div class="profiler">

                    <a href="#" class="text-decoration-none text-black ">
                        <img src="/admin/show?filename=@row["Picture"]" height="110px" width="110px" class="img-st" />
                    </a><br /><br />
                    <span class="fs-4">@row["StudentName"]</span> <i class="fa-solid fa-circle-check text-primary"></i><br />
                    <span class="fs-5">@row["Course"]</span>
                    <span class="fs-5">@row["Semester"]</span>
                    <br /><br />
                    <div class="icon">
                        <a href="#"><i class="fa-brands fa-facebook text-primary"></i></a>&nbsp;
                        <a href="#"><i class="fa-brands fa-square-twitter text-secondary"></i></a>&nbsp;
                        <a href="#"><i class="fa-brands fa-linkedin text-warning"></i></a>&nbsp;
                        <a href="#"><i class="fa-brands fa-youtube text-danger"></i></a>&nbsp;
                    </div>
                    <div class="fs-5 text-center mt-3">
                        <a href="/Student/Updates?STUDENTID=@row["STUDENTID"]" class="text-decoration-none h"><span>Go To Profile</span></a>
                    </div>
                </div>

            </div>
        </div>
    }
    </div>
