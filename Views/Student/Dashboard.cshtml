
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}
<style>
    .box {
        height: 160px;
        width: 150px;
        float: left;
        background: white;
        margin-left: 13px;
        margin-top: 30px;
        border-radius: 10px;
        font-weight: 800;
    }
    .underSt{
        text-align:center;
        padding-top:50px;
        color:black;
    }
    .profile {
        height: 400px;
        width: 260px;
        background: white;
        float: left;
        margin-top: 30px;
        border-radius:10px;
        margin-left: 20px;
        box-sizing: border-box;
    }
    .profiler{
       text-align:center;
       padding-left:10px;
       padding-top:35px;
    }
    .img-st{
        border-radius:50px;
    }
    .icon{
        font-size:30px;
        text-align:center;
    }
    .h{
        color:black;
    }
    .h:hover{
        color:red;
    }
</style>
@model System.Data.DataTable

