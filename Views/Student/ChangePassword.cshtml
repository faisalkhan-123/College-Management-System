
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}


<style>
    .change-password {
        height: 440px;
        width: 500px;
        background: white;
        margin: 20px auto;
    }

    .text {
        font-weight: 700;
        text-align: center;
    }

    .form {
        box-sizing: border-box;
        height: 40px;
        width: 400px;
        margin-left: 50px;
        border: 1px solid black;
        border-radius: 20px;
        padding-left: 15px;
    }
</style>
<div class="change-password shadow-sm">
    <h3 class="text pt-5">Change Your Password</h3><br /><br />
    <input type="text" hidden name="studentId"/>
    <form method="post">
        <label class="ps-5">New Password</label><br />
        <input type="password" class="form" placeholder="Enter your new password" name="password" /><br /><br />
        <label class="ps-5">Confirm Password</label><br />
        <input type="password" class="form" placeholder="Confirm password" name="cpassword"/><br /><br /><br />
        <button class="form bg-info text-white" style="border:none;">Change Now</button><br /><br />
        <span class="ps-5 text-danger">Please do't share your login password to anyone for your</span>
    </form>
</div>