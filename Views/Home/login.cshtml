
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        body {
            background: #f8f9fa;
            font-family: Arial, sans-serif;
            height: 100vh;
        }

        .login-left {
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        .logo {
            text-align: center;
            margin-bottom: 15px;
        }

            .logo img {
                width: 150px;
            }

        .role-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
        }

            .role-icons .role {
                width: 80px;
                height: 80px;
                border: 2px solid #007bff;
                border-radius: 50%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                font-size: 14px;
                cursor: pointer;
                color: #007bff;
                transition: 0.3s;
            }

            .role-icons .active {
                background: #007bff;
                color: #fff;
            }

        .login-right {
            background: #007bff;
            color: #fff;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            text-align: center;
        }

            .login-right h2 {
                font-size: 32px;
                font-weight: bold;
            }

            .login-right p {
                margin-top: 15px;
                font-size: 16px;
                line-height: 1.5;
            }
    </style>

    <div class="container-fluid">
        <div class="row">
            <!-- Left Side (col-sm-5) -->
            <div class="col-sm-7 login-left">
                <div class="login-box">
                    <!-- Logo -->

                    <p class="text-center text-muted">I do not have an account yet</p>

                    <h6 class="text-center">I am</h6>
                    <div class="role-icons">
                        <div class="role active" data-role="Admin">Admin</div>
                        <div class="role" data-role="Employee">Employee</div>
                        <div class="role" data-role="Student">Student</div>
                    </div>

                    <form method="post">
                        <!-- Hidden role field -->
                        <input type="hidden" name="role" id="userRole" value="Admin">

                        <div class="mb-3">
                            <input type="text" class="form-control" name="email" placeholder="Portal Name" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Log in</button>
                    </form>
                </div>
            </div>

            <!-- Right Side (col-sm-7) -->
            <div class="col-sm-5 login-right">
                <h2>Start managing now</h2>
                <p>
                    Stop struggling with common tasks and focus on the real choke points. <br>
                    Discover a full featured & 100% Free College management platform.
                </p>
                <a href="/home/index"><button class="btn btn-light mt-3">Get started</button></a>
                <!-- Illustration -->
                <img src="~/Content/images/login4.png" width="500px;" alt=""> <!-- Replace with your own image -->
            </div>
        </div>
    </div>

    <script>
        // Role selection
        const roles = document.querySelectorAll('.role');
        const hiddenRole = document.getElementById('userRole');

        roles.forEach(role => {
            role.addEventListener('click', function () {
                // remove active from all
                roles.forEach(r => r.classList.remove('active'));
                // add active to clicked
                this.classList.add('active');
                // update hidden input
                hiddenRole.value = this.getAttribute('data-role');
            });
        });
    </script>

