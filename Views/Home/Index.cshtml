            <form method="post">
                <div class="row mt-5 my-0">
                    <div class="col-12 col-sm-6">
                        <label>First Name</label>
                        <input type="text" placeholder="Enter your name" name="firstname" required class="form-control" /><br />
                        <label>Last Name</label>
