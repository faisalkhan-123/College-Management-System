                        <label>Number</label>
                        <input type="number" placeholder="Enter your number" name="number" required class="form-control" /><br />
                    </div>
                    <label>Message</label>
                    <textarea id="message" class="form-control ms-2" name="message" required></textarea>
                </div><br />
                <span class="text-danger">@ViewBag.contactMessage</span>
                <input type="submit" value="Send Message" class="btn btn-primary" /><br /><br /><br />
            </form>
        </div>

