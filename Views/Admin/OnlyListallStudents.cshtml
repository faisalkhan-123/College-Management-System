@model System.Data.DataTable

@{
    ViewBag.Title = "OnlyListallStudents";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}


<h2 class="text-center text-primary" style="font-weight:700;">Student List </h2>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-sm-6 ">
            <table class="table shadow-lg" id="myTable">
                <thead class="table table-bordered table-danger table-hover table-responsive">
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Registration</td>
                        <td>Picture</td>
                        <td>DOAddmission</td>
                        <td>Course</td>
                        <td>DiscountFees</td>
                        <td>Pincode</td>
                        <td>College</td>
                        <td>Mobile</td>
                        <td>DOBirthday</td>
                        <td>Email</td>
                        <td>Orphan</td>
                        <td>Gender</td>
                        <td>Cast</td>
                        <td>OSC</td>
                        <td>Semester</td>
                        <td>Pschool</td>
                        <td>Religion</td>
                        <td>BloodGR</td>
                        <td>PriviousID</td>
                        <td>Disease</td>
                        <td>Status</td>
                        <td>Address</td>
                        <td>FatherName</td>
                        <td>FNID</td>
                        <td>Education</td>
                        <td>FMobile</td>
                        <td>Profession</td>
                        <td>Income</td>
                        <td>MotherName</td>
                        <td>MNID</td>
                        <td>MEducation</td>
                        <td>MMobile</td>
                        <td>MProfession</td>
                        <td>MIncome</td>
                        <td>Action</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["STUDENTID"]</td>
                            <td>@row["Studentname"]</td>
                            <td>@row["RegistrationNo"]</td>
                            <td><img src="/admin/show?filename=@row["Picture"]" height:" 50px" width="50px" /></td>
                            <td>@row["DOA"]</td>
                            <td>@row["Course"]</td>
                            <td>@row["DiscountFees"]</td>
                            <td>@row["Pincode"]</td>
                            <td>@row["rollnumber"]</td>
                            <td>@row["Mobile"]</td>
                            <td>@row["DOB"]</td>
                            <td>@row["Email"]</td>
                            <td>@row["Orphan"]</td>
                            <td>@row["Gender"]</td>
                            <td>@row["Cast"]</td>
                            <td>@row["OSC"]</td>
                            <td>@row["Semester"]</td>
                            <td>@row["Pschool"]</td>
                            <td>@row["Religion"]</td>
                            <td>@row["BloodGR"]</td>
                            <td>@row["PriviousID"]</td>
                            <td>@row["Disease"]</td>
                            <td>@row["Status"]</td>
                            <td>@row["Address"]</td>
                            <td>@row["FatherName"]</td>
                            <td>@row["FNID"]</td>
                            <td>@row["Education"]</td>
                            <td>@row["FMobile"]</td>
                            <td>@row["Profession"]</td>
                            <td>@row["Income"]</td>
                            <td>@row["MotherName"]</td>
                            <td>@row["MNID"]</td>
                            <td>@row["MEducation"]</td>
                            <td>@row["MMobile"]</td>
                            <td>@row["MProfession"]</td>
                            <td>@row["MIncome"]</td>
                            <td><a href="/admin/Update?STUDENTID=@row["STUDENTID"]" class="btn btn-danger">Edit</a>
                            <a href="/admin/Delete?STUDENTID=@row["STUDENTID"]" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

