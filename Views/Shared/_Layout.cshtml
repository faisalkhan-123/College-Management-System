<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        background: linear-gradient(to left,#072151,#093079);
        color: white;
    }

    #splash {
        position: fixed;
        top: -100%;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #0f5ef7;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-family: Arial, sans-serif;
        font-weight: bold;
        animation: slideDown 1s forwards;
        z-index: 9999;
    }

    @@keyframes slideDown {
        from {
            top: -100%;
        }

        to {
            top: 0;
        }
    }

    @@keyframes slideUp {
        from {
            top: 0;
        }

        to {
            top: -100%;
        }
    }

    #main {
        display: none;
        font-family: Arial, sans-serif;
    }

    .navbar-custom {
        background: linear-gradient(to left,#072151,#093079);
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
        color: white !important;
    }

    .nav-link {
        color: white !important;
        font-size: 16px;
    }

    .sign {
        border-radius: 10px;
        background: white;
        color: black !important;
        height: 40px;
        margin-left: 10px;
        min-width: 100px;
    }
        .sign:hover {
            background: white;
        }
    .header{
        font-size:50px;
        margin-top:20px;
        font-weight:900;
    }
    .pcolor {
        color: #6f7ab9;
    }
    /* Responsive fix */
    @@media (max-width: 768px) {
        .navbar-nav {
            text-align: center;
        }

        .sign{
            width: 100%;
            margin: 5px 0;
        }
    }
    .hero-section {
  position: relative;
  padding: 20px 0;
  overflow: hidden;
  text-align: center;
}

.hero-container {
  position: relative;
  display: inline-block;
}

.main-img {
  max-width: 600px;
  width: 90%;
  z-index: 2;
  position: relative;
}

/* Small images close to laptop */
.side-img {
  position: absolute;
  width: 95px;
  z-index: 3;
  animation: float 4s ease-in-out infinite;
}
    .side-img1 {
        position: absolute;
        width: 60px;
        z-index: 3;
        animation: float 4s ease-in-out infinite;
    }

/* Tight positioning like eSkooly */
.img1 { top: 40%; left: 60px; }   /* Chart image (left side) */
.img2 { top: 23%; right: 120px; }  /* Mobile image (right side) */
.img4 { bottom: 37%; right: 12%; } /* Tick bottom-right */

@@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

/* Responsive Fix */
@@media (max-width: 768px) {
  .main-img { max-width: 100%; }
  .side-img { width: 60px; }
  .img1 { top: 10%; left: -30px; }
  .img2 { top: 10%; right: -30px; }
  .img3 { bottom: 2%; left: 5%; }
  .img4 { bottom: 5%; right: 5%; }
}
