  margin-right:70px;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.icon img {
  max-width: 40px;
  height: auto;
}

/* Positioning of icons (around mobile image) */
.icon1 { top: 5%; left: -90px; }    /* top-left */
.icon2 { top: 5%; right: -90px; }   /* top-right */
.icon3 { top: 35%; left: -110px; }  /* middle-left */
.icon4 { top: 35%; right: -110px; } /* middle-right */
.icon5 { bottom: 15%; left: -90px; }/* bottom-left */
.icon6 { bottom: 15%; right: -90px;}/* bottom-right */

/* Responsive */
@@media (max-width: 768px) {
  .mobile-img { max-width: 250px; }
  .icon {
    width: 50px;
    height: 50px;
    padding: 10px;
  }
  .icon img { max-width: 25px; }
  .icon1 { top: 0; left: -60px; }
  .icon2 { top: 0; right: -60px; }
  .icon3 { top: 35%; left: -70px; }
  .icon4 { top: 35%; right: -70px; }
